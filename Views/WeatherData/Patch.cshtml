@model APIClient.DTO.WeatherDataDto

@{
    ViewData["Title"] = "Patch Weather Data";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Patch">
    <input asp-for="id" type="hidden" />

    <div class="form-group">
        <label asp-for="Conditions"></label>
        <input asp-for="Conditions" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Temperature"></label>
        <input asp-for="Temperature" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="WindSpeed"></label>
        <input asp-for="WindSpeed" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Patch" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
